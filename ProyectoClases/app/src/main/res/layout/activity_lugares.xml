<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lugares"
    android:padding="8dp"
    >
    <Button
        android:id="@+id/restaurantes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        app:backgroundTint="@null"
        android:text="@string/restaurantes"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/mas"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/button"
        android:text="MÃ¡s Populares"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/restaurantes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/menos"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/button"
        android:text="Menos Populares"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/acDep"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@drawable/button"
        android:text="Ascendente Dep."
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="@+id/restaurantes" />

    <Button
        android:id="@+id/opDep"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/button"
        android:text="Descendente Dep."
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/acDep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/acNom"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/button"
        android:text="Ascendente Nom."
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/opDep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/opNom"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="128dp"
        android:background="@drawable/button"
        android:text="Descendente Nom."
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/acDep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        tools:ignore="MissingConstraints" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="180dp"
        android:id="@+id/lugar_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   />

</androidx.constraintlayout.widget.ConstraintLayout>